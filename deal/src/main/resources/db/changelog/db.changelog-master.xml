<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create table client" author="steammachinist">
        <createTable tableName="client">
            <column name="client_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(50)"/>
            <column name="marital_status" type="VARCHAR(50)"/>
            <column name="dependent_amount" type="INT"/>
            <column name="passport" type="JSONB"/>
            <column name="employment" type="JSONB"/>
            <column name="account_number" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="create table credit" author="steammachinist">
        <createTable tableName="credit">
            <column name="credit_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19, 2)"/>
            <column name="term" type="INT"/>
            <column name="monthly_payment" type="DECIMAL(19, 2)"/>
            <column name="rate" type="DECIMAL(19, 10)"/>
            <column name="psk" type="DECIMAL(19, 10)"/>
            <column name="payment_schedule" type="JSONB"/>
            <column name="insurance_enabled" type="BOOLEAN"/>
            <column name="salary_client" type="BOOLEAN"/>
            <column name="credit_status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="create table statement" author="steammachinist">
        <createTable tableName="statement">
            <column name="statement_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="credit_id" type="UUID"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="creation_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="applied_offer" type="JSONB"/>
            <column name="sign_date" type="TIMESTAMP"/>
            <column name="ses_code" type="VARCHAR(255)"/>
            <column name="status_history" type="JSONB"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="statement"
                baseColumnNames="client_id"
                constraintName="fk_statement_client"
                referencedTableName="client"
                referencedColumnNames="client_id"/>

        <addForeignKeyConstraint
                baseTableName="statement"
                baseColumnNames="credit_id"
                constraintName="fk_statement_credit"
                referencedTableName="credit"
                referencedColumnNames="credit_id"/>
    </changeSet>

</databaseChangeLog>